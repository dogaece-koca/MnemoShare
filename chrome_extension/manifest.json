{
  "manifest_version": 3,
  "name": "MnemoShare - Secret Key Manager",
  "version": "1.0",
  "description": "Securely manage, split and recover keys using Shamir's Secret Sharing.",
  "permissions": [
    "activeTab"
  ],
  "host_permissions": [
    "http://127.0.0.1:5000/*"
  ],
  "action": {
    "default_popup": "popup.html"
  },
  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self'"
  }
}